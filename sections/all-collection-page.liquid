<section id="collection-page">
    <div class="heading">
        <h1>All Collections</h1>
    </div>
    {% for collection in collections %}
      {% unless collection.handle == 'frontpage' %}
        {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}
        <div class="collection-container">
            <a href="{{ collection.url | within: collection }}">
                <img src="{{ collection.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}">
                <div class="overlay">
                <a href="{{ collection.url }}" class="title"> {{ collection_title }}</a>
                </div>  
            </a>
        </div>
        {% endunless %}
        {% endfor %}
        </section>
        {% style %}
        #collection-page{
            width: 100%;
            height: auto;
            display: grid;
            place-items: center;
        }
        .collection-container{
            width: 70%;
            height: 400px;
            overflow: hidden;
            position: relative;
            cursor: pointer;
            margin: 20px 0;
        }
        .collection-container:hover img{
            transform: scale(1.3);
        }
        .collection-container img{
            width: 100%;
            height: 400px;
            transition: all 1s linear;
            object-fit: cover;
        }
        .overlay{
          position: absolute;
          left: 0;
          top: 0;
          height: 100%;
          width: 100%;
          background-color: rgba(0, 0, 0, 0.6);
          opacity: 0.6;
          display: grid;
          align-items: baseline;
          justify-content: center;
          transition: all 0.5s ease;
          }
          .title{
            color: #fff;
            font-size: 30px;
            font-weight: bold;
            text-decoration: none;
          }
          .heading h1{
            font-size: 50px;
          }
        {% endstyle %}