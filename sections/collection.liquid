<section id="collection">
    {% assign collection = collections[section.settings.collection] %}
      <div class="heading">
       <h1>{{ section.settings.headings }}</h1>
      </div>
       <div class="product-container">     
                         {% for product in collection.products %}
                      
                            
                             <div class="products">
                         <img src="{{ product.featured_image | image_url }}" class="collection-img" >
                         <h1>{{ product.title | link_to: product.url }}</h1> 
                         <p>{{ product.price | money}}</p>  
                             </div>
         {% endfor %} 
          </div>
    </section>
    {% schema %}
    {
        "name": "Collection",
        "settings": [
            {
              "type": "text",
              "id": "headings",
              "default": "Collection",
              "label": "Collection"
            
          
    }
          ,{
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]    
    }
    {% endschema %}
    {% style %}
   .product-container{
    width: 100%;
    height: auto;
    display: grid;
    padding: 20px 0;
    justify-content: space-between;
    grid-template-columns: auto auto auto auto auto auto;
    overflow: hidden;
   }
    .collection-img{
        width: 250px;
       padding: 20px;
        max-height: 300px;
    }
    .products{
        width: 250px;
        height: auto;
        padding: 20px;
    }
    
   
    {% endstyle %}
    {% javascript %}
    $('.product-container').slick({
        dots: true,
        infinite: false,
        slidesToShow: 4,
        slidesToScroll: 1,
        responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 3,
        infinite: false,
        dots: true
      }
    },
    {
      breakpoint: 780,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]

      });
    {% endjavascript %}